{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build:docs": {
      "dependsOn": ["build:ts"],
      "outputs": ["api-docs/**", ".ae/**", "README.md"]
    },
    "build:ts": {
      "dependsOn": ["^build:ts"],
      "outputs": ["dist/**", "lib/**"]
    },
    "clean": {
      "cache": false
    },
    "container:build": {
      "cache": false,
      "dependsOn": ["^build:ts"],
      "outputs": []
    },
    "deploy": {
      "cache": false,
      "dependsOn": ["build:ts", "test"],
      "outputs": []
    },
    "format": {
      "dependsOn": [],
      "outputs": []
    },
    "lint": {
      "dependsOn": [],
      "outputs": []
    },
    "size": {
      "dependsOn": ["build:ts"],
      "outputs": []
    },
    "start:development": {
      "dependsOn": [],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build:ts"],
      "outputs": ["coverage/**"]
    },
    "test:ci": {
      "dependsOn": ["^build:ts"],
      "outputs": ["coverage/**"]
    }
  }
}
